<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Agendas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="toggle-btn">
      <button id="toggle-btn" class="btn btn-dark">☰</button>
    </div>
    <nav class="nav flex-column">
      <a class="nav-link" href="/events"><i class="fas fa-calendar-alt me-2"></i> Events</a>
  
      <% if (user && user.role === "Admin") { %>
        <a class="nav-link" href="/users"><i class="fas fa-user-friends me-2"></i> Users</a>
      <% } %>
  
      <a class="nav-link" href="/registrations"><i class="fas fa-clipboard-list me-2"></i> Registrations</a>
      <a class="nav-link" href="/speakers"><i class="fas fa-microphone-alt me-2"></i> Speakers</a>
      <a class="nav-link" href="/agenda"><i class="fas fa-tasks me-2"></i> Agenda</a>
  
      <!-- Logout Button (Bottom of Sidebar) -->
      <a class="nav-link logout-btn" href="/auth/logout">
        <i class="fas fa-sign-out-alt me-2"></i> Logout
    </a>
    </nav>
  </div>
  


  <!-- ✅ Main Content -->
  <div class="content" id="content">
    <h1 class="text-center">Event Agenda</h1>
    <button class="btn btn-primary mb-3" onclick="showAddAgendaModal()">Add Agenda</button>
  
    <table class="table table-striped mt-3">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Event Name</th>
          <th>Session Title</th>
          <th>Speaker Name</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="agendaTable"></tbody>
    </table>
  </div>



  <!-- ✅ Add Agenda Modal -->
<div class="modal fade" id="addAgendaModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Agenda</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="addAgendaForm">
          <!-- Select Event -->
          <select id="eventID" class="form-control mb-2" required>
            <option value="">Select Event</option>
          </select>

          <!-- Select Speaker -->
          <select id="speakerID" class="form-control mb-2" required>
            <option value="">Select Speaker</option>
          </select>

          <!-- Session Title -->
          <input type="text" id="sessionTitle" placeholder="Session Title" required class="form-control mb-2" />

          <!-- Start Time -->
          <input type="datetime-local" id="startTime" required class="form-control mb-2" />

          <!-- End Time -->
          <input type="datetime-local" id="endTime" required class="form-control mb-2" />

          <button type="submit" class="btn btn-primary w-100">Add Agenda</button>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- ✅ Edit Agenda Modal -->
<!-- ✅ Edit Agenda Modal -->
<!-- ✅ Edit Agenda Modal -->
<div class="modal fade" id="editAgendaModal" tabindex="-1">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title">Edit Agenda</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
              <form id="editAgendaForm">
                  <input type="hidden" id="editAgendaID" />

                  <!-- ✅ Event Dropdown -->
                  <label>Select Event</label>
                  <select id="editEventID" class="form-control mb-2" required>
                      <option value="">Select Event</option>
                  </select>

                  <!-- ✅ Speaker Dropdown -->
                  <label>Select Speaker</label>
                  <select id="editSpeakerID" class="form-control mb-2" required>
                      <option value="">Select Speaker</option>
                  </select>

                  <!-- ✅ Session Title -->
                  <label>Session Title</label>
                  <input type="text" id="editSessionTitle" class="form-control mb-2" required />

                  <!-- ✅ Start Time -->
                  <label>Start Time</label>
                  <input type="datetime-local" id="editStartTime" class="form-control mb-2" required />

                  <!-- ✅ End Time -->
                  <label>End Time</label>
                  <input type="datetime-local" id="editEndTime" class="form-control mb-2" required />

                  <button type="submit" class="btn btn-success w-100">Save Changes</button>
              </form>
          </div>
      </div>
  </div>
</div>




  <!-- ✅ Scripts -->
  <script src="/js/agendaScripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
