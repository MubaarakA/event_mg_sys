<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Speakers Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Sidebar -->
  <!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="toggle-btn">
      <button id="toggle-btn" class="btn btn-dark">â˜°</button>
  </div>
  <nav class="nav flex-column">
      <a class="nav-link" href="/events"><i class="fas fa-calendar-alt me-2"></i> Events</a>

      <% if (user.role === "Admin") { %>
      <a class="nav-link" href="/users"><i class="fas fa-user-friends me-2"></i> Users</a>
      <% } %>

      <a class="nav-link" href="/registrations"><i class="fas fa-clipboard-list me-2"></i> Registrations</a>
      <a class="nav-link" href="/speakers"><i class="fas fa-microphone-alt me-2"></i> Speakers</a>
      <a class="nav-link" href="/agenda"><i class="fas fa-tasks me-2"></i> Agenda</a>

      <!-- Logout Button -->
      <a class="nav-link logout-btn" href="/auth/logout">
        <i class="fas fa-sign-out-alt me-2"></i> Logout
    </a>
  </nav>
</div>



  <!-- Main Content -->
  <div class="content" id="content">
    <h1 class="text-center">Speakers Management</h1>
    <button class="btn btn-primary mb-3" onclick="showAddSpeakerModal()">Add Speaker</button>

    <table class="table table-striped mt-3">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Topic</th>
            <th>Event</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="speakersTable"></tbody>
      </table>
      
  </div>

 <!-- Add Speaker Modal -->
<div class="modal fade" id="addSpeakerModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Speaker</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addSpeakerForm">
            <input type="text" id="speakerName" placeholder="Full Name" required class="form-control mb-2" />
            <input type="email" id="speakerEmail" placeholder="Email" required class="form-control mb-2" />
            <input type="text" id="speakerPhone" placeholder="Phone" required class="form-control mb-2" />
            <input type="text" id="speakerTopic" placeholder="Topic" required class="form-control mb-2" />
            
            <!-- Fetch events dynamically for dropdown -->
            <select id="eventID" class="form-control mb-2" required>
              <option value="">Select Event</option>
            </select>
            
            <button type="submit" class="btn btn-primary w-100">Add Speaker</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!--  Edit Speaker Modal -->
<div class="modal fade" id="editSpeakerModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Speaker</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="editSpeakerForm">
            <input type="hidden" id="editSpeakerID" />
  
            <input type="text" id="editFullName" placeholder="Full Name" required class="form-control mb-2" />
            <input type="email" id="editEmail" placeholder="Email" required class="form-control mb-2" />
            <input type="text" id="editPhone" placeholder="Phone" required class="form-control mb-2" />
            <input type="text" id="editTopic" placeholder="Topic" required class="form-control mb-2" />
  
            <select id="editEventID" class="form-control mb-2" required>
              <option value="">Select Event</option>
            </select>
  
            <button type="submit" class="btn btn-success w-100">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  

  <!--  Scripts -->
  <script src="/js/speakersScripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
