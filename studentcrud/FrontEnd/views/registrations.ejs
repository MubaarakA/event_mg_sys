<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Registrations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Sidebar -->
  <!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="toggle-btn">
      <button id="toggle-btn" class="btn btn-dark">☰</button>
  </div>
  <nav class="nav flex-column">
      <a class="nav-link" href="/events"><i class="fas fa-calendar-alt me-2"></i> Events</a>

      <% if (user.role === "Admin") { %>
      <a class="nav-link" href="/users"><i class="fas fa-user-friends me-2"></i> Users</a>
      <% } %>

      <a class="nav-link" href="/registrations"><i class="fas fa-clipboard-list me-2"></i> Registrations</a>
      <a class="nav-link" href="/speakers"><i class="fas fa-microphone-alt me-2"></i> Speakers</a>
      <a class="nav-link" href="/agenda"><i class="fas fa-tasks me-2"></i> Agenda</a>

      <!-- Logout Button -->
      <a class="nav-link logout-btn" href="/auth/logout">
        <i class="fas fa-sign-out-alt me-2"></i> Logout
    </a>
  </nav>
</div>



  <!-- Main Content -->
  <div class="content" id="content">
    <h1 class="text-center">Event Registrations</h1>
    <button class="btn btn-primary mb-3" onclick="showAddRegistrationModal()">Add Registration</button>

    <table class="table table-striped mt-3">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Attendee</th>
          <th>Event</th>
          <th>Registration Date</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="registrationsTable"></tbody>
    </table>
  </div>

  <!-- ✅ Add Registration Modal -->
  <div class="modal fade" id="addRegistrationModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Registration</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addRegistrationForm">
            <input type="text" id="attendeeName" placeholder="Attendee Name" required class="form-control mb-2" />
            
            <select id="eventID" class="form-control mb-2" required>
              <option value="">Select Event</option>
            </select>

            <input type="datetime-local" id="registeredOn" required class="form-control mb-2" />

            <select id="registrationStatus" class="form-control mb-2">
              <option value="Pending">Pending</option>
              <option value="Confirmed">Confirmed</option>
              <option value="Cancelled">Cancelled</option>
            </select>

            <button type="submit" class="btn btn-primary w-100">Add Registration</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- ✅ Edit Registration Modal -->
 <!-- ✅ Edit Registration Modal -->
<div class="modal fade" id="editRegistrationModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Registration</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="editRegistrationForm">
          <input type="hidden" id="editRegistrationID" />

          <input type="text" id="editAttendeeName" required class="form-control mb-2" />

          <select id="editEventID" class="form-control mb-2" required>
            <option value="">Select Event</option>
          </select>

          <input type="datetime-local" id="editRegisteredOn" required class="form-control mb-2" />

          <select id="editRegistrationStatus" class="form-control mb-2">
            <option value="Pending">Pending</option>
            <option value="Confirmed">Confirmed</option>
            <option value="Cancelled">Cancelled</option>
          </select>

          <button type="submit" class="btn btn-success w-100">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>


  <!-- ✅ Scripts -->
  <script src="/js/registrationScripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
