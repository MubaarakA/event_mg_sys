  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <!-- Sidebar -->
   
<div class="sidebar" id="sidebar">
  <div class="toggle-btn">
      <button id="toggle-btn" class="btn btn-dark">â˜°</button>
  </div>
  <nav class="nav flex-column">
      <a class="nav-link" href="/events"><i class="fas fa-calendar-alt me-2"></i> Events</a>

      <% if (user.role === "Admin") { %>
      <a class="nav-link" href="/users"><i class="fas fa-user-friends me-2"></i> Users</a>
      <% } %>

      <a class="nav-link" href="/registrations"><i class="fas fa-clipboard-list me-2"></i> Registrations</a>
      <a class="nav-link" href="/speakers"><i class="fas fa-microphone-alt me-2"></i> Speakers</a>
      <a class="nav-link" href="/agenda"><i class="fas fa-tasks me-2"></i> Agenda</a>

      <!-- Logout Button -->
      <a class="nav-link logout-btn" href="/auth/logout">
          <i class="fas fa-sign-out-alt me-2"></i> Logout
      </a>
  </nav>
</div>



    

    <!-- Main Content -->
    <div class="content" id="content">
      <h1 class="text-center">Events Table</h1>
      <button class="btn btn-primary mb-3" onclick="showAddEventModal()">Add Event</button>

      <table class="table table-striped mt-3">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Event Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="eventsTable"></tbody>
      </table>
    </div>

    <!-- Modals -->
    <div class="modal fade" id="addEventModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="addEventForm">
              <input type="text" id="eventName" placeholder="Event Name" required class="form-control mb-2" />
              <input type="text" id="description" placeholder="Description" required class="form-control mb-2" />
              <input type="text" id="location" placeholder="Location" required class="form-control mb-2" />
              <input type="datetime-local" id="eventDate" required class="form-control mb-2" />
              <input type="number" id="capacity" placeholder="Capacity" required class="form-control mb-2" />
              <select id="status" class="form-control mb-2">
                <option value="Upcoming">Upcoming</option>
                <option value="Ongoing">Ongoing</option>
                <option value="Completed">Completed</option>
              </select>
              <button type="submit" class="btn btn-primary w-100">Add Event</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editEventModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="editEventForm">
              <input type="hidden" id="editEventID" />
              <input type="text" id="editEventName" class="form-control mb-2" required />
              <input type="text" id="editDescription" class="form-control mb-2" required />
              <input type="text" id="editLocation" class="form-control mb-2" required />
              <input type="datetime-local" id="editEventDate" class="form-control mb-2" required />
              <input type="number" id="editCapacity" class="form-control mb-2" required />
              <select id="editStatus" class="form-control mb-2">
                <option value="Upcoming">Upcoming</option>
                <option value="Ongoing">Ongoing</option>
                <option value="Completed">Completed</option>
              </select>
              <button type="submit" class="btn btn-success w-100">Save Changes</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="/js/eventScripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  </body>
  </html>
